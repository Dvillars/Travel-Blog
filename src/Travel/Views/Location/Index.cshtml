@{
    ViewData["Title"] = "To Do List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Travel.Models.Location>

<h2>Travel</h2>
<h4>@Html.DisplayNameFor(model => model.City)</h4>
<p>@Html.ActionLink("Add new Location", "Create")</p>
<ul>
    @foreach (var location in Model)
    {
        <li>@Html.DisplayFor(modelLocation => location.City) | @Html.DisplayFor(modelLocation => location.Country) | @Html.ActionLink("Edit Location", "Edit", new { id = location.LocationId })</li>
    }
</ul>

