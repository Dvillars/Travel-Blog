@{
    ViewData["Title"] = "Experience - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Travel.Models.Experience

<h2>Edit</h2>
<hr />
<h4>Edit this experience: @Html.DisplayFor(model => model.Description)</h4>
